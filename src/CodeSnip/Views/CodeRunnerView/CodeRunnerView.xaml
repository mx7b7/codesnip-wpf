<UserControl x:Class="CodeSnip.Views.CodeRunnerView.CodeRunnerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodeSnip.Views.CodeRunnerView"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" 
             xmlns:helpers="clr-namespace:CodeSnip.Helpers"
             d:DataContext="{d:DesignInstance Type=local:CodeRunnerViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400" >
    <UserControl.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <mah:MetroProgressBar Height="10" IsIndeterminate="True" Grid.Row="0">
                <mah:MetroProgressBar.Style>
                    <Style TargetType="mah:MetroProgressBar" BasedOn="{StaticResource {x:Type mah:MetroProgressBar}}">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </mah:MetroProgressBar.Style>
            </mah:MetroProgressBar>
            <Grid Grid.Row="1" Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition  Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Text="Compiler:" FontWeight="Bold" Grid.Column="0" Grid.Row="0"/>
                <ComboBox ItemsSource="{Binding Compilers}"
                            SelectedItem="{Binding SelectedCompiler}"
                            DisplayMemberPath="Name" Grid.Column="0" Grid.Row="1" Width="120"/>
                <TextBlock Text="Compiler flags:" FontWeight="Bold" Margin="10,0,0,0" Grid.Column="1" Grid.Row="0" />
                <TextBox  Text="{Binding Flags}" Grid.Column="1" Grid.Row="1" Margin="10,0,0,0"/>
            </Grid>
            <Grid  Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Button Content="Run" Command="{Binding RunCommand}" Grid.Column="0" Grid.Row="0"/>
                <mah:Badged Badge="{Binding ReloadBadge}" Grid.Column="1" Grid.Row="0" Margin="10,0,0,0" >
                    <Button Content="Reload"            
                            Command="{Binding ReloadCommand}" />
                </mah:Badged>
                <Button Content="Get link"  Margin="10,0,0,0" Grid.Column="2" Grid.Row="0" Command="{Binding GetLinkCommand}"/>
                <TextBox Grid.Column="3" Grid.Row="0" Margin="10,0,0,0" IsReadOnly="True" Text="{Binding ShortLink}"/>
            </Grid>
            <TextBlock Text="Stdout:" FontWeight="Bold"  Grid.Row="3" Margin="0,10,0,0"/>
            <TextBox Height="350" Text="{Binding Stdout}" TextWrapping="Wrap" IsReadOnly="True" Grid.Row="4"/>
            <TextBlock Text="Stderr:" FontWeight="Bold" Grid.Row="5" Margin="0,10,0,0"/>
            <TextBox Height="200" Text="{Binding ErrorText}" TextWrapping="Wrap" IsReadOnly="True" Grid.Row="6"/>
        </Grid>
    </ScrollViewer>
</UserControl>
